body {
  font-family: 'Helvetica Neue', sans-serif;
  background-color: #f4f4f4;
  color: #333;
  margin: 0;
  padding: 0;
}

header {
  background-color: #222;
  color: white;
  padding: 1rem 2rem;
  text-align: center;
}

a {
  color: #ff69b4; /* アクセントにピンク */
  text-decoration: none;
}

.container {
  max-width: 960px;
  margin: auto;
  padding: 2rem;
}

.card {
  background: white;
  border-radius: 15px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  transition: transform 0.2s;
}

.card:hover {
  transform: scale(1.02);
}

.card img {
  max-width: 100%;
  border-radius: 12px;
}

.card-title {
  font-size: 1.5rem;
  margin-top: 1rem;
  color: #444;
}

.card-date {
  font-size: 0.85rem;
  color: #999;
  margin-bottom: 0.5rem;
}
